<launch>
	<include file="$(find marvin)/launch/marvin.machine" />
	<arg name="machine" default="marvin-2" />

    <rosparam file="$(find stereo_camera)/marvin_cameras.yaml" command="load" />
  	<node ns="bumblebeeLeft" pkg="nodelet" type="nodelet" name="stereo_left_manager" args="manager" output="screen" machine="$(arg machine)"/>
  	<node   pkg="nodelet" type="nodelet" name="bumblebeeLeft" args="load stereo_camera/StereoCamera bumblebeeLeft/stereo_left_manager" output="screen" machine="$(arg machine)">
    	<!-- <remap from="/bumblebeeLeft/out" to="remapped_output"/> -->
  	</node>

   	<node  pkg="nodelet" type="nodelet" name="bumblebeeLeftPreprocess" args="load stereo_camera/StereoPreprocess bumblebeeLeft/stereo_left_manager" output="screen" machine="$(arg machine)">
   		<!-- <remap from="/bumblebeeLeftPreprocess/out" to="remapped_output"/>-->
  	</node>

      <node  pkg="nodelet" type="nodelet" name="bumblebeeLeftPointCloud" args="load stereo_camera/StereoPointCloud bumblebeeLeft/stereo_left_manager" output="screen">
       <!-- <remap from="/bumblebeeLeftPreprocess/out" to="remapped_output"/>-->
      </node>

	<group>
    	<node name="imageViewLeftRaw" pkg="image_view" type="image_view" respawn="false" >
     		<remap from="image" to="/bumblebeeLeft/left/image_raw/"/>
     	</node>

    	<node name="imageViewLeftColorRect" pkg="image_view" type="image_view" respawn="false" >
     		<remap from="image" to="/bumblebeeLeft/left/image_rect_color/"/>
     	</node>
	</group>
	
</launch>
